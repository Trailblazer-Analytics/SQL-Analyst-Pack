# L026: References
references_strategy = consistent

# L027: Qualified references
force_enable = False

# L028: References consistency
reference_matching = True

# L029: Keywords should not be used as identifiers
quoted_identifiers_policy = none

# L030: Function names
capitalisation_policy = upper

# L031: Avoid table aliases in FROM/JOIN
# (can be configured based on preference)

# L032: Prefer specifying join type
# (enabled by default)

# L033: UNION vs UNION ALL
# (enabled by default)

# L036: SELECT targets
wildcard_policy = single

# L037: ORDER BY columns
order_by_columns_extend_rule = True

# L038: Trailing semicolons
# (enabled by default)

# L039: Unnecessary quotes
# (enabled by default)

# L040: Null comparison
# (enabled by default)

# L041: Distinct over count
# (enabled by default)

# L042: Join condition order
# (enabled by default)

# L043: Case sensitivity
# (enabled by default)

# L044: Query produces unknown number of result columns
# (enabled by default)

# L045: Query defines a CTE but does not use it
# (enabled by default)

# L046: Unnecessary DISTINCT
# (enabled by default)

# L047: Use consistent syntax to express "count number of rows"
# (enabled by default)

# L048: Quoted literals
quoted_literals_policy = consistent

