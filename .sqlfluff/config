# L009: Files must end with newline
# (enabled by default)

# L010: Keywords should be consistently upper/lowercase
capitalisation_policy = upper

# L011: Implicit aliasing
aliasing = explicit

# L012: Order of columns in SELECT
# (enabled by default, but can be configured)

# L014: Unquoted identifiers
unquoted_identifiers_policy = all

# L015: DISTINCT position
# (enabled by default)

# L019: Leading/trailing comma
comma_style = trailing

# L022: Blank lines
blank_lines_trailing_table_reference = 0

# L025: Table aliases
