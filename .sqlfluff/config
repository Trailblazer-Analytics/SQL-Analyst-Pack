[sqlfluff]
# SQL dialect - can be overridden per file/project
dialect = postgres

# Template engine - for dynamic SQL
templater = jinja

# Core rules configuration
exclude_rules = L003,L013,L016,L034

# Rule-specific configuration
[sqlfluff:rules]
# L001: Tab vs spaces
tab_space_size = 4

# L002: Mixed tabs and spaces  
indent_unit = space

# L003: Indentation length (disabled above)
# hanging_indents = True

# L006: Operators positioning
